<div class="container">
  <h1>Edit product</h1>
  <%= simple_form_for @product do |f| %>
    <%= f.input :title %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.input :available %>
    <%= f.input :picture %>
    <%= f.input :picture_cache, as: :hidden %>
    <%= f.button :submit %>
  <% end %>
</div>
