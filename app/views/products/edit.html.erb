<div class="container">
  <h1>Edit your Capybara ad</h1>
  <%= simple_form_for @product do |f| %>
    <%= f.input :title %>
    <%= f.input :price, input_html: { max: 5 } %>
    <%= f.input :description %>
    <%= f.input :available %>
    <%= f.input :picture %>
    <%= f.input :picture_cache, as: :hidden %>
    <%= f.button :submit, value: 'Update', class: 'btn btn-warning' %>
  <% end %>
</div>
