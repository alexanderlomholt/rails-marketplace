<div class="container">
  <div class="full-height padded-top-bottom">
    <h1>Add new product</h1>
    <%= simple_form_for @product do |f| %>
      <%= f.input :title %>
      <%= f.input :price %>
      <%= f.input :description  %>
      <%= f.input :picture %>
      <%= f.input :picture_cache, as: :hidden %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
