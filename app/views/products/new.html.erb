<div class="container">
  <h1>Add new Capybara</h1>
  <%= simple_form_for @product do |f| %>
    <%= f.input :title %>
    <%= f.input :price, input_html: { max: 5 } %>
    <%= f.input :description  %>
    <%= f.input :picture %>
    <%= f.input :picture_cache, as: :hidden %>
    <%= f.button :submit, value: 'Submit', class: 'btn btn-success' %>
  <% end %>
</div>
